@model EventsInNeighborhoodViewModel


@{

    int CountList = 0;

    if (Model.listEventsInDays.Count > Model.listEventsInWeek.Count)
    {
        CountList = Model.listEventsInDays.Count;
    }
    else
    {
        CountList = Model.listEventsInWeek.Count;

    }

}


<div class="container-fluid">
    <div class="row">
        <div class="col-lg-6">

            <table class="table-responsive">
                <thead>
                    <tr>
                        <th>#  </th>
                        <th>
                            Wydarzenia w tym tygodniu
                        </th>                        
                    </tr>

                </thead>
                <tbody>

                    @for (int i = 0; i < Model.listEventsInWeek.Count; i++)
                    {
                        <tr>
                            <td>@(i+1)</td>
                            <td>

                                @Model.listEventsInWeek[i].EventName

                            </td>                           
                        </tr>
                    }



                </tbody>
            </table>





        </div>
        <div class="col-lg-6">

           

                <table class="table-responsive">
                    <thead>
                        <tr>
                            <th>#  </th>
                            <th>
                                Wydarzenia w ciągu @Model.Days dni
                            </th>
                        </tr>

                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.listEventsInDays.Count; i++)
                        {
                        <tr>
                            <td>@(i + 1)</td>
                            <td>

                                @Model.listEventsInDays[i].EventName

                            </td>
                        </tr>
                        }



                    </tbody>
                </table>          




        </div>




      



    </div>
</div>
