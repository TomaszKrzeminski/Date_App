<div id="dialog">

</div>

<script>

    $(document).ready(


        function () {


            $("#dialog").dialog({
                autoOpen: false,
                dialogClass: "no-close",
                buttons: [
                    {
                       
                        text: "OK",
                        click: function () {
                            $(this).dialog("close");
                        }
                    }
                ]
            });



            $(".iconAction").click(function () { $("#dialog").dialog("open"); });

        }



    );




</script>