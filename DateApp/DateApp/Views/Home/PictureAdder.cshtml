@model UserDetailsModel
@{
    ViewData["Title"] = "PictureAdder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .label {
        min-width: 200px;
        background-color: white;
    }

    .img-thumbnail {
        margin-top: 30px;
    }


    .imageR {
        position: relative;
    }

    .iconAction {
        position: absolute;
        bottom: 0;
        left: 15px;
    }

    .Remove {
        position: absolute;
        bottom: 0;
        left: 15px;
    }

        .iconAction:hover {
            background-color: lightgray;
        }


    .error {
        color: red;
       
        margin-left: 15px;
        color: red;
        font-weight: bold;
       
        font-size: 22px;
        line-height: 20px;
       
    }

</style>


<form asp-action="PictureAdder">
    <div class="container-fluid">
        <div class="row">
            <div  class="col-lg-4 col-md-3  col-sm-8">
                <div  class="row">
                    <div style="min-height:1900px;border-style:solid;"  class="col-lg-6">
                        <div class="row">
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Zdjęcie Imię Nazwisko</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Dodatkowe Obcje</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Dodatkowe Obcje Prenium</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Liczba lików</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Liczba super lików</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                <label>Ustawienia</label>
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Email
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Nr tel
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Lokalizacja
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Odległość 0-150 km
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Szukam kobieta meszczyzna inne
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Wiek od 18-100
                            </div>
                            <div class="col-lg-12" style="min-height:100px;border-style:solid;">
                                Pokazuj ukryj profil podczas wyszukiwania
                            </div>
                        </div>                                                                                                                                                                      </div>
                    <div class="col-lg-6"></div>
                </div>
            </div>
            <div style=" min-height:1900px" class="col-lg-4 col-md-6  col-sm-8">
                <div class="row">
                    <div style="min-height:610px;" class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 ">
                                <a href="#">
                                    <img class="imageR  img-thumbnail" src=@Model.MainPhotoPath alt="">

                                    @if (Model.MainPhotoPath != "/AppPictures/photo.png")
                                    {
                                        <img alt="0" class="Remove img-thumbnail" src="~/AppPictures/remove.png" >
                                    }
                                    else
                                    {
                                        <img alt="0" class="iconAction img-thumbnail" src="~/AppPictures/add.jpg" >
                                    }


                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 ">
                                <a href="#">
                                    <img class="imageR  img-thumbnail" src=@Model.PhotoPath1 alt="">
                                    @if (Model.PhotoPath1 != "/AppPictures/photo.png")
                                    {
                                        <img alt="1" class="Remove img-thumbnail" src="~/AppPictures/remove.png" >
                                    }
                                    else
                                    {
                                        <img  alt="1" class="iconAction img-thumbnail" src="~/AppPictures/add.jpg" >
                                    }
                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 ">
                                <a href="#">
                                    <img class="imageR  img-thumbnail" src=@Model.PhotoPath2 alt="">
                                    @if (Model.PhotoPath2 != "/AppPictures/photo.png")
                                    {
                                        <img class="Remove img-thumbnail" src="~/AppPictures/remove.png" alt="2">
                                    }
                                    else
                                    {
                                        <img class="iconAction img-thumbnail" src="~/AppPictures/add.jpg" alt="2">
                                    }
                                </a>
                            </div>
                            <div class="col-lg-6 col-md-6 ">
                                <a href="#">
                                    <img class="imageR  img-thumbnail" src=@Model.PhotoPath3 alt="">
                                    @if (Model.PhotoPath3 != "/AppPictures/photo.png")
                                    {
                                        <img class="Remove img-thumbnail" src="~/AppPictures/remove.png" alt="3">
                                    }
                                    else
                                    {
                                        <img class="iconAction img-thumbnail" src="~/AppPictures/add.jpg" alt="3">
                                    }
                                </a>
                            </div>
                           
                        </div>



                    </div>
                    <div style="min-height:200px; " class="col-lg-12 form-group">

                        <label class="font-weight-bold" asp-for="Description">Opis</label>
                        <input style="height:140px" class="form-control" asp-for="Description" />

                    </div>
                    <div style="min-height:200px; " class="col-lg-12 form-group">

                        <label class="font-weight-bold" asp-for="JobPosition">Stanowisko</label>
                        <input style="height:140px" class="form-control" asp-for="JobPosition" />

                    </div>
                    <div style="min-height:200px; " class="col-lg-12 form-group">

                        <label class="font-weight-bold" asp-for="CompanyName">Firma</label>
                        <input style="height:140px" class="form-control" asp-for="CompanyName" />

                    </div>
                    <div style="min-height:200px; " class="col-lg-12 form-group">

                        <label class="font-weight-bold" asp-for="School">Szkoła</label>
                        <input style="height:140px" class="form-control" asp-for="School" />

                    </div>
                    <div style="min-height:200px; " class="col-lg-12 form-group">

                        <label class="font-weight-bold" asp-for="CityOfResidence">Mieszkam w</label>
                        <input style="height:140px" class="form-control" asp-for="CityOfResidence" />

                    </div>
                    <div>
                        <input type="hidden" asp-for="DetailsId" />
                    </div>
                    <div>
                        <input type="hidden" asp-for="UserId" />
                    </div>
                    <div>
                        <button class="btn btn-warning" type="submit">Zapisz</button>
                    </div>

                </div>
            </div>
            <div class="col-lg-4 col-md-3  col-sm-8"></div>
        </div>
    </div>
</form>
<div id="dialog">

    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <form id="PictureAddForm" asp-action="AddPictureAsync" method="post" enctype="multipart/form-data">
        <div>
            <div>
                <label>Dodaj Zdjęcie</label>
            </div>
            <div>
                <input title="Musisz wybrać plik" class="required error" id="choose" type="file" name="file" @*multiple*@ />
                <input id="PictureNumber"  style="display:none"   name="PictureNumber" value="" />
                <input id="Upload" style="display:none" type="submit" value="Upload" />

            </div>
            
        </div>

    </form>
</div>
<div>
    <form id="RemoveForm" asp-action="RemovePicture" asp-controller="Home" method="post">
        <input id="RemovePicture"  style="display:none" name="Number" value="" />
    </form>
</div>




<script>

    $(document).ready(                                   


        function () {


           







            $('#PictureAddForm').validate({

                errorPlacement: function (error, element) {
                    error.insertBefore(element);
                }

            });

            $("#dialog").dialog({
                autoOpen: false,
                draggable: false,
                resizable: false,
                width: 500,
                height: 400,
                modal: true,
                show: 'slideDown',
                hide: 'slideUp',
                dialogClass: "no-close",
                buttons: [
                    {

                        text: "Anuluj",
                        click: function () {
                            $(this).dialog("close");
                        }


                    },
                    {

                        text: "Potwierdź",
                        click: function () {
                            $("#Upload").click();
                        }
                    }
                ]
            });



            $(".iconAction").click(function () {
               
                var numb = $(this).attr("alt");
               
                $("#PictureNumber").val(numb);
                $("#dialog").dialog("open");
            });


            $(".Remove").click(function () {

                
                var numb = $(this).attr("alt");
                $("#RemovePicture").val(numb);
                $("#RemoveForm").submit();

               




            });

        }



    );




</script>