@model CreateModel
@{
    Layout = "_Layout";
}



<div style="height:1024px; background: url(/AppPictures/meet.png);" class="container-fluid">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Name">Imię</label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Nazwisko</label>
                    <div><span asp-validation-for="Surname" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Surname" />
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <div><span asp-validation-for="Email" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Email" />
                </div>


                <div class="form-group">
                    <lablel asp-for="Sex">Płeć</lablel>
                    <div><span asp-validation-for="Sex" class="text-danger"></span></div>
                    <select class="browser-default custom-select" asp-for="Sex">
                        <option asp-for="Sex" value="Mężczyzna">Mężczyzna</option>
                        <option asp-for="Sex" value="Kobieta">Kobieta</option>
                        <option asp-for="Sex" value="Inne">Inne</option>

                    </select>


                </div>



                <div class="form-group">
                    <label asp-for="Dateofbirth">Data urodzenia</label>
                    <div><span asp-validation-for="Dateofbirth" class="text-danger"></span></div>
                    <input class="form-control" type="date" asp-for="Dateofbirth" />
                </div>
                <div class="form-group">
                    <label asp-for="City">Miasto</label>
                    <div><span asp-validation-for="City" class="text-danger"></span></div>
                    <input class="form-control" asp-for="City" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Hasło</label>
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                    <input class="form-control" asp-for="Password" />
                </div>
                <div style="display:none;">
                    <input id="Latitude"  asp-for="Latitude" />
                    <input id="Longitude"  asp-for="Longitude" />
                </div>

                <button class="btn btn-warning" type="submit">Utwórz</button>
                <a class="btn btn-danger" asp-action="Index">Anuluj</a>

            </form>

        </div>


    </div>





</div>

<script>
    $(document).ready(function () {

        $("input.input-validation-error").closest(".form-group").addClass("has-danger");



    });
</script>

<div style="display:none">
    <form asp-action="Coordinates" asp-controller="Pair" method="Post">
        <input type="hidden" id="Longitude" name="Longitude" />
        <input type="hidden" id="Langitude" name="Langitude" />
    </form>
</div>

<script>
    var x = document.getElementById("Geo");
    function getLocation() {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else {
            x.innerHTML = "Geolocation is not supported by this browser.";
        }
    }

    function showPosition(position) {
        document.getElementById('Latitude').value  = position.coords.latitude;
        document.getElementById('Longitude').value = position.coords.longitude;      
               
    }


    getLocation();

</script>


