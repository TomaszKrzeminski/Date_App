@model AddLikesViewModel

@{
    ViewData["Title"] = "RemovePhoto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">




    <form asp-action="AddLikes" asp-controller="Admin" method="post">

        <div class="col-lg-12">
            <label>Email użytkownika</label>
            <input asp-for="Email" />
        </div>


        <div class="col-lg-12">
            <label>Ilość polubień</label>
            <input asp-for="NumberOfLikes" disabled />
        </div>

        <div class="col-lg-12">
            <label>Dodaj polubienia</label>
            <div><span asp-validation-for="LikesToAdd" class="text-danger"></span></div>
            <input asp-for="LikesToAdd" />
        </div>

        <div class="col-lg-12">
            <input type="hidden" asp-for="UserId" />
        </div>


        <div class="col-lg-12">
            <button class="btn btn-danger" type="submit">Ok</button>
        </div>
    </form>



</div>