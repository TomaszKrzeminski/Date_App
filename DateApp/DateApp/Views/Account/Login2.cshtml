@model LoginModel
@{
    Layout = "_Layout";
}

<style type="text/css">
    .badge-warning {
        font-size: 12px;
    }

    .badge-warning {
        font-size: 20px;
    }

    .badge-warning {
        font-size: 24px;
    }
</style>



<div style="height:1024px; background: url(/AppPictures/paris.jpg);" class="container-fluid">
    <div class="row">
        <div class="col-lg-5 col-md-4 col-sm-3"></div>
        <div class="col-lg-2 col-md-4 col-sm-6">
            <div asp-validation-summary="All"></div>
            <form class="for" asp-action="Login" method="Post">
                <div class="form-group">
                    <label class="badge badge-warning" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label class="badge badge-warning" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                </div>
                <button class="btn btn-info" type="submit">Zaloguj</button>
                <a class="btn btn-danger" asp-action="Create" asp-controller="Admin">Zarejestruj</a>
            </form>
        </div>
        <div>
            <a class="btn btn-success" asp-action="Sign" asp-controller="Auth">Zaloguj się poprzez facebook</a>
        </div>
        <div class="col-lg-5 col-md-4 col-sm-3"></div>
    </div>
</div>

<script>
    $(document).ready(function () {

    });

</script>