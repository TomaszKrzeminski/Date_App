@model LoginModel
@using System.Configuration
@using Microsoft.Extensions.Options
@inject IOptions<DateApp.Models.ReCaptchaSettings> GoogleRecap
<script src="https://www.google.com/recaptcha/api.js?render=6LdRikIaAAAAACEjEtyW1PYRzsCoCJDum3CU3xRV"></script>
@{
    Layout = "_Layout";
}

<style type="text/css">
    .badge-warning {
        font-size: 12px;
    }

    .badge-warning {
        font-size: 20px;
    }

    .badge-warning {
        font-size: 24px;
    }
</style>


<div style="height:1024px; background: url(/AppPictures/paris.jpg);" class="container-fluid">
    <div class="row">
        <div class="col-lg-5 col-md-4 col-sm-3"></div>
        <div class="col-lg-2 col-md-4 col-sm-6">
            <div asp-validation-summary="All"></div>
            <form class="for" asp-action="Login" method="Post" id="demo-form">
                <div class="form-group">
                    <label class="badge badge-warning" asp-for="Email"></label>
                    <input class="form-control" asp-for="Email" />
                </div>
                <div class="form-group">
                    <label class="badge badge-warning" asp-for="Password"></label>
                    <input class="form-control" asp-for="Password" />
                </div>
                <input id="Input_Token" asp-for="Token" type="hidden" />
                <div>
                    <button class="btn btn-info" type="submit">Zaloguj</button>

                    <a class="btn btn-success" asp-action="Create" asp-controller="Admin">Zarejestruj</a>
                </div>
                <div>
                    <a class="btn btn-danger" asp-action="ResetPassword" asp-controller="Admin">Resetuj Hasło</a>
                </div>


            </form>

        </div>
        <div class="col-lg-5 col-md-4 col-sm-3"></div>
    </div>
</div>


<script>






    $(document).ready(function () {







        grecaptcha.ready(function () {
            grecaptcha.execute('6LdRikIaAAAAACEjEtyW1PYRzsCoCJDum3CU3xRV', { action: 'submit' }).then(function (token) {

                console.log(token);
                $('#Input_Token').val(token);

            });
        });
        //}






    });

</script>