@model EventViewModel

@{
    ViewData["Title"] = "AddEvent";
    Layout = "~/Views/Shared/_LayoutEvent.cshtml";
}



<div class="container-fluid">

   

        <div class="row">
            <div class="col-lg-3">
                <div class="row">
                    <div style="min-height:100px; " class="col-lg-12 form-group">
                        <h5>Zdjęcie 1</h5>
                        <a href="#">
                          
                            <img class="imageR  img-thumbnail" src=@Model.Event.PhotoPath1 alt="">

                          


                        </a>
                    </div>
                    <div style="min-height:100px; " class="col-lg-12 form-group">
                        <h5>Zdjęcie 2</h5>
                        <a href="#">
                           
                            <img class="imageR  img-thumbnail" src=@Model.Event.PhotoPath2 alt="">
                           
                        </a>
                    </div>
                    <div style="min-height:100px; " class="col-lg-12 form-group">
                        <h5>Zdjęcie 3</h5>
                        <a href="#">
                           
                            <img class="imageR  img-thumbnail" src=@Model.Event.PhotoPath3 alt="">
                           
                        </a>
                    </div>

                </div>
            </div>
            <div class="col-lg-3">            
                
                <div class="row">
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold" asp-for="Event.EventName">Nazwa</label>
                        <input class="form-control" asp-for="Event.EventName" />
                    </div>
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold" asp-for="Event.ZipCode">Kod Pocztowy</label>
                        <input id="ZipCode" class="form-control" asp-for="Event.ZipCode" />
                    </div>

                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold">Miasto</label>
                        <input class="form-control" asp-for="Event.City" />
                    </div>
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold" asp-for="Event.Date">Data</label>
                        <input class="form-control" value=@Model.Event.Date.ToString() />
                    </div>
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold" asp-for="Event.Date">Godzina</label>
                        <input class="form-control" value=@Model.Event.Date.ToShortTimeString() />
                    </div>
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <label class="font-weight-bold" asp-for="Event.Description">Opis</label>
                        <input class="form-control" asp-for="Event.Description" />
                    </div>
                    <div style="min-height:50px; " class="col-lg-12 form-group">
                        <input id="Latitude" type="hidden" class="form-control" asp-for="Event.Latitude" />
                        <input id="Longitude" type="hidden" class="form-control" asp-for="Event.Longitude" />
                    </div>
                </div>
                                                         


            </div>
            <div class="col-lg-3">

                <div class="row">
                    <div style="min-height:100px; " class="col-lg-12 form-group">

                        <a href="#">
                            <video width="320" height="240" controls>
                                <source src=@Model.Event.FilePath type="video/mp4">
                                @*<source src="movie.ogg" type="video/ogg">*@
                                Your browser does not support the video tag.
                            </video>

                          


                        </a>




                    </div>



                </div>

            </div>
            <div class="col-lg-3">
                <div>
                    <a asp-action="JoinEvent" asp-controller="Event" asp-route-EventId=@Model.Event.EventId    class="btn btn-primary">Dołącz do Wydarzenia</a>
                </div>
                <table class="table">
                    <thead>

                        <tr>
                            <th>Numer</th>
                            <th>Uczestnicy</th>
                            <th>Miasto</th>
                        </tr>

                    </thead>
                    <tbody>

                        @for (int i = 0; i < Model.Event.EventUser.Count; i++)
                        {

                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Event.EventUser[i].AppUser.UserName</td>
                                <td>@Model.Event.EventUser[i].AppUser.City</td>

                            </tr>


                        }

                    </tbody>
                </table>
               



            </div>
        </div>


   

</div>


    




