@model List<Event>
@{
    ViewData["Title"] = "CancelEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>Lista Twoich Wydarzeń</h1>
    </div>
    <div class="row">
        @foreach (var Event in Model)
        {
            <div class="col-lg-12">
                <form asp-action="CancelEvent" method="post">
                    <div class="btn-group">
                        <input type="hidden" name="EventId" value=@Event.EventId>
                        <h4>@Event.EventName</h4>
                        <input type="submit" class="btn btn-danger" value="Usuń" />
                    </div>                   
                </form>
            </div>

        }





    </div>
</div>

