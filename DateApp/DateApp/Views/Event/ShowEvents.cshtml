@model List<Event>
@{
    ViewData["Title"] = "CancelEvent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


   
   


    <div class="row">
        <table class="table">
            <thead>
               
            </thead>
            <tbody>

                @for (int i=0; i<Model.Count; i++)
                {

                    <tr>                                                                   

                        <td>@(i+1)</td>
                        <td>@Model[i].EventName </td>
                        <td>@Model[i].City</td>
                        <td>@Model[i].Date.ToShortDateString()</td>
                        <td>@Html.ActionLink("Szczegóły","ShowEvent","Event",new {EventId= Model[i].EventId },new {@class="btn btn-info" })</td>
                       
                    </tr>              


                }
              
            </tbody>
        </table>
    </div>